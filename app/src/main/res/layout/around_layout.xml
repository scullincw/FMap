<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:src="@drawable/ic_back_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="周边"
            android:textColor="@color/text_grey"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/park_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/park_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_park" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/park_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/car_park"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/petrol_station_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/park_btn"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/petrol_station_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_petrolstation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/petrol_station_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/petrol_station"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dining_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_below="@id/park_btn"
            android:layout_alignLeft="@id/park_btn"
            android:layout_marginTop="10dp"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/dining_btn_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_dining" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dining_btn_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/dinner"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/atm_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_below="@id/park_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/dining_btn"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/atm_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_bank" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/atm_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/atm"
                android:textAllCaps="true"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/supermarket_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_below="@id/dining_btn"
            android:layout_alignLeft="@id/park_btn"
            android:layout_marginTop="10dp"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/market_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_supermarket" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/market_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/super_market"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/car_fix_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_alignTop="@id/supermarket_btn"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/supermarket_btn"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/car_fix_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_car_maintain" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_fix_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/car_fix"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hospital_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_below="@id/supermarket_btn"
            android:layout_alignLeft="@id/supermarket_btn"
            android:layout_marginTop="10dp"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/hospital_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_hospital" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hospital_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/hospital"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hotel_btn"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_alignTop="@id/hospital_btn"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/hospital_btn"
            android:background="@drawable/around_bg_shape">

            <ImageView
                android:id="@+id/hotel_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ambitus_hospital" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotel_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/hotel"
                android:textColor="@color/white_ce"
                android:textSize="18sp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>